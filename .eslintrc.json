{
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "plugin:import/errors"
    ],
    "rules": {
        "react/jsx-props-no-spreading": "off",
        "import/prefer-default-export": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    [
                        "parent",
                        "sibling"
                    ],
                    "object",
                    "type",
                    "index"
                ],
                "newlines-between": "always",
                "pathGroupsExcludedImportTypes": [
                    "builtin"
                ],
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                },
                "pathGroups": [
                    {
                        "pattern": "{react,react/**,react-dom/**,next,next/**}",
                        "group": "external",
                        "position": "before"
                    },
                    {
                        "pattern": "@/**",
                        "group": "internal",
                        "position": "before"
                    },
                    {
                        "pattern": "./**.module.css",
                        "group": "index",
                        "position": "after"
                    }
                ]
            }
        ]
    }
}